---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us">
  <Navigation transparent={true} />
  
  <main class="main-content">
    <section class="contact-hero">
      <div class="contact-container">
        <div class="contact-box">
          <p class="contact-intro">Please contact us on one of the email links below or visit us on LinkedIn.</p>
          
          <div class="contact-info">
            <div class="contact-emails">
              <a href="mailto:contact@azure-vc.co">contact@azure-vc.co</a>
              <a href="mailto:hello@yachtingventures.co">hello@yachtingventures.co</a>
            </div>
            
            <div class="contact-social">
              <a href="hhttps://www.linkedin.com/company/azure-vc/posts/?feedView=all" target="_blank" rel="noopener noreferrer" aria-label="Connect on LinkedIn">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .contact-hero {
    min-height: 100vh;
    width: 100%;
    position: relative;
    display: flex;
    align-items: center;
    background-image: url('/images/hero/blue_economy_investments.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

  .contact-container {
    width: 100%;
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 clamp(1rem, 4vw, 3rem);
    display: flex;
    justify-content: flex-end;
  }

  .contact-box {
    background: rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 8px;
    padding: clamp(2rem, 4vw, 3rem);
    max-width: 500px;
    width: 100%;
    color: var(--color-white);
  }

  .contact-intro {
   font-size: clamp(1.2rem, 3vw, 2rem);
    font-weight: 400;
    line-height: 1.4;
    color: white;
  }

  .contact-info {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: clamp(2rem, 4vw, 3rem);
    align-items: start;
  }

  .contact-emails {
    display: flex;
    flex-direction: column;
    gap: clamp(0.75rem, 1.5vw, 1.1rem);
  }

  .contact-emails a {
    color: var(--color-white);
    text-decoration: none;
    font-size: clamp(0.8rem, 2.5vw, 1rem);
    transition: opacity 0.3s ease;
  }

  .contact-emails a:hover {
    opacity: 0.8;
  }

  .contact-social a {
    color: var(--color-white);
    display: inline-flex;
    transition: opacity 0.3s ease;
    margin-top: 25px;
  }

  .contact-social a:hover {
    opacity: 0.8;
  }

  .contact-social svg {
    width: clamp(36px, 4vw, 40px);
    height: clamp(36px, 4vw, 40px);
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .contact-hero {
      background-attachment: scroll;
      min-height: 100vh;
      padding: var(--space-3xl) 0;
    }

    .contact-container {
      justify-content: center;
    }

    .contact-box {
      max-width: 100%;
    }

    .contact-info {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }

    .contact-social {
      display: flex;
      justify-content: flex-start;
    }
  }
</style>
