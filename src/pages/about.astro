---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import HeroSection from '../components/HeroSection.astro';
import BlueBox from '../components/BlueBox.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="About Us">
  <Navigation transparent={true} />
  
  <main class="main-content">
    <HeroSection 
      text="Azure Ventures was founded by Gabbi Richardson and Greg Chiappini — entrepreneurs and investors with deep roots in the maritime sector." 
      backgroundImage="/images/hero/maritime_technology_startups.jpg"
      maxWidth="70%"
    />
    
    <section class="about-content">
      <div class="container">
        <div class="about-grid">
          <div class="bluebox-column">
            <BlueBox heading="Azure Ventures is a pre-seed and seed-stage venture capital firm backing founders at the very beginning of their journey.">
              <p>We invest in people before products — in long-term relationships built on belief, conviction, and trust.</p>
              
              <p>Our sole focus is the maritime sector. This is our domain — where we bring deep industry knowledge, founder experience, and a global network of experts and operators.</p>
              
              <p>We partner with startups set to transform the maritime world — businesses with the potential to shape the future of oceans, trade, climate, and global connectivity.</p>
            </BlueBox>
          </div>
          
          <div class="images-column">
            <div class="profile-image">
              <img src="/images/greg_chiappini.png" alt="Greg Chiappini" loading="lazy">
            </div>
            
            <div class="profile-image">
              <img src="/images/gabbi_richardson.png" alt="Gabbi Richardson" loading="lazy">
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .about-content {
    padding: var(--space-3xl) 0;
  }

  .about-grid {
    display: grid;
    grid-template-columns: minmax(400px, 600px) 1fr;
    gap: clamp(2rem, 4vw, 4rem);
    align-items: start;
  }

  .bluebox-column {
    /* BlueBox has proper min/max width */
  }

  .images-column {
    display: flex;
    gap: 66px;
    align-items: start;
    justify-content: flex-end;
  }

  .profile-image {
    width: 350px;
    height: 350px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }

  .profile-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Mobile styles */
  @media (max-width: 1024px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .images-column {
      justify-content: center;
      gap: clamp(2rem, 5vw, 66px);
    }

    .profile-image {
      width: clamp(200px, 40vw, 350px);
      height: clamp(200px, 40vw, 350px);
    }
  }

  @media (max-width: 768px) {
    .about-content {
      padding: var(--space-2xl) 0;
    }

    .images-column {
      flex-direction: column;
      align-items: center;
      gap: var(--space-lg);
    }

    .profile-image {
      width: clamp(180px, 50vw, 280px);
      height: clamp(180px, 50vw, 280px);
    }
  }
</style>
