---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import HeroSection from '../components/HeroSection.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Home">
  <Navigation transparent={true} />
  
  <main class="main-content">
    <HeroSection 
      text="While most keep their feet on the ground and some look to the skies, we fix our gaze on the sea â€” and how humanity interacts with it."
      backgroundImage="/images/ocean-hero.jpg"
    />

    <!-- Blue Box Section -->
    <section class="intro-section">
      <div class="container">
        <div class="blue-box">
          <h2>Azure Ventures is a pre-seed and seed-stage venture capital firm backing founders at the very beginning of their journey.</h2>
          <!-- rest of content -->
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* Only page-specific styles here */
  .intro-section {
    position: relative;
    padding: 0 3rem 6rem;
  }

  .blue-box {
    background: linear-gradient(
      to bottom,
      rgba(79, 195, 247, 0.85) 0%,
      rgba(255, 235, 59, 0.85) 100%
    );
    backdrop-filter: blur(10px);
    padding: 3rem;
    border-radius: 8px;
    max-width: 500px;
  }
  /* etc... */
</style>