<style>
  .footer {
    background: var(--color-gray-medium);
    padding: 4rem 0 2rem;
    position: relative;
    z-index: 2;
    margin-top: auto;
    color: var(--color-gray-light);
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 3rem;
  }

  .footer-left {
    display: flex;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 0.05em;
  }

  .footer-logo img {
    height: 40px;
    width: auto;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-nav a {
    color: var(--color-gray-light);
    text-decoration: none;
    font-size: 0.85rem;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }

  .footer-nav a:hover {
    color: white;
  }

  .footer-right {
    display: flex;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-column h4 {
    font-size: 0.85rem;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
    opacity: 0.6;
  }

  .footer-column p {
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .footer-column a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-column a:hover {
    color: white;
  }

  .linkedin-icon {
    color: var(--color-gray-light);
    opacity: 1;
    transition: opacity 0.3s ease;
    display: inline-block;
  }

  .linkedin-icon:hover {
    opacity: 1;
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: center;
    gap: 1rem;
    font-size: 0.8rem;
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .footer-container {
      padding: 0 1.5rem;
    }

    .footer-left,
    .footer-right {
      flex-direction: column;
      gap: 2rem;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }
  }
</style>