---
// Simplified Hero Component with single text box
export interface Props {
  text: string;
  backgroundImage?: string;
  alignment?: 'left' | 'center' | 'right';
  maxWidth?: string;
}

const { 
  text, 
  backgroundImage = '/images/ocean-hero.jpg',
  alignment = 'left',
  maxWidth = '800px'
} = Astro.props;
---

<div class="hero-background" style={`background-image: url(${backgroundImage})`}></div>

<section class="hero-section" data-align={alignment}>
  <div class="hero-container">
    <div class="hero-text-box" style={`max-width: ${maxWidth}`}>
      <h1>{text}</h1>
    </div>
  </div>
</section>

<style is:global>
  .hero-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 0;
  }
</style>

<style>
  .hero-section {
    min-height: 75vh; /* Reduced from 100vh so BlueBox is visible on load */
    width: 100%;
    position: relative;
    display: flex;
    align-items: center;
    z-index: 1;
    padding-top: 80px; /* Account for fixed nav */
  }

  .hero-container {
    width: 100%;
    max-width: var(--container-max, 1400px);
    margin: 0 auto;
    padding: clamp(2rem, 4vw, 3rem) 100px clamp(2rem, 4vw, 3rem);
    display: flex;
  }

  /* Alignment options */
  .hero-section[data-align="left"] .hero-container {
    justify-content: flex-start;
  }

  .hero-section[data-align="center"] .hero-container {
    justify-content: center;
  }

  .hero-section[data-align="right"] .hero-container {
    justify-content: flex-end;
  }

  .hero-text-box {
    background: rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 8px;
    padding: clamp(1rem, 4vw, 1rem);
    width: 100%;
  }

  .hero-text-box h1 {
    font-size: clamp(1.5rem, 3.5vw, 2.5rem);
    font-weight: 400;
    line-height: 1.3;
    color: white;
    margin: 0;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .hero-section {
      min-height: 50vh;
    }

    .hero-container {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .hero-text-box {
      max-width: 100% !important;
    }
  }
</style>
