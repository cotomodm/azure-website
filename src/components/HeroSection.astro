---
export interface Props {
  text: string;
  backgroundImage?: string;
}

const { 
  text, 
  backgroundImage = '/images/ocean-hero.jpg' 
} = Astro.props;

// Generate a unique ID for this hero instance
const heroId = `hero-${Math.random().toString(36).substr(2, 9)}`;
---

<!-- Fixed Hero Background -->
<div class="hero-background" style={`background-image: url('${backgroundImage}')`}></div>

<!-- Hero Content -->
<section class="hero-section">
  <div class="hero-content">
    <h1 id={heroId} data-text={text}>
      {text}
    </h1>
  </div>
</section>

<style>
  .hero-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    z-index: -1;
  }

  .hero-background::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(11, 13, 16, 0.2) 0%,
      rgba(11, 13, 16, 0.3) 100%
    );
  }

  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rem 3rem 3rem;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 1000px;
    text-align: left;
  }

  .hero-content h1 {
    font-size: clamp(1.75rem, 4vw, 3rem);
    font-weight: 300;
    line-height: 1.3;
    color: white;
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 1.5rem;
    }
  }
</style>